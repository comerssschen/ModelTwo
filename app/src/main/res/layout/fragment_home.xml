<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="收银台"
            android:textColor="@color/title_color"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/common_backgroud_black_shape"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="￥"
                android:textColor="#CCCCCC"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/paymoney_edit"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:background="@drawable/common_backgroud_shape"
                android:gravity="center"
                android:text="选择会员"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_refund"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/common_backgroud_shape"
                android:gravity="center"
                android:text="退款"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/title_color"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:background="@drawable/common_backgroud_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:scaleType="fitXY"
                android:src="@drawable/sl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="刷脸"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qrcode"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/common_backgroud_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:scaleType="fitXY"
                android:src="@drawable/qrcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="二维码"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/soft_keyboard_btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_keyboard_btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_keyboard_btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/header"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/soft_keyboard_btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_keyboard_btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_keyboard_btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/header"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/soft_keyboard_btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_keyboard_btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_keyboard_btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/header"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="."
            android:textColor="@color/header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_keyboard_btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/bg_color"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/header"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_color">

            <ImageView

                android:layout_width="27dp"
                android:layout_height="17dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/delete" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
