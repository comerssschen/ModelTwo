<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="250dp"
    android:background="@drawable/dialog_bg_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="@color/header"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="退款"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="28dp"
        android:drawableRight="@drawable/user"
        android:drawablePadding="27dp"
        android:gravity="center_vertical"
        android:text="请您扫描小票二维码"
        android:textColor="@color/title_color"
        android:textSize="8sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:text="原交易订单号"
        android:textColor="@color/title_color"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/common_backgroud_black_shape"
        android:hint="请扫描/请输入小票上的订单号"
        android:maxLength="20"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="管理密码"
        android:textColor="@color/title_color"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/common_backgroud_black_shape"
        android:hint="请管理员输入退款密码"
        android:maxLength="20"
        android:paddingLeft="5dp"
        android:password="true"
        android:singleLine="true"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/common_backgroud_shape"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="10sp" />

</LinearLayout>